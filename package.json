{
  "private": true,
  "type": "module",
  "scripts": {
    "build": "bun wl && vite build",
    "build:ssr": "bun wl && vite build && vite build --ssr",
    "dev": "bun wl && vite",
    "format": "prettier --write resources/",
    "format:check": "prettier --check resources/",
    "lint": "eslint . --fix",
    "lint:check": "eslint",
    "prod": "bun run build",
    "test": "vitest run",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest",
    "fix": "./vendor/bin/fixr --dirty",
    "wl": "php artisan wayfinder:generate && php artisan zorah:generate",
    "cb": "composer update && bun update"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@eslint/js": "^9.39.0",
    "@laravel/vite-plugin-wayfinder": "^0.1.7",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^12.0.1",
    "@tailwindcss/vite": "^4.1.16",
    "@types/node": "^24.9.2",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vitest/coverage-v8": "^4.0.6",
    "@vitest/ui": "^4.0.6",
    "@vue/eslint-config-typescript": "^14.6.0",
    "@vue/test-utils": "^2.4.6",
    "concurrently": "^9.2.1",
    "eslint": "^9.39.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-vue": "^10.5.1",
    "husky": "^9.1.7",
    "jsdom": "^27.1.0",
    "prettier": "^3.6.2",
    "prettier-plugin-organize-imports": "^4.3.0",
    "prettier-plugin-tailwindcss": "^0.7.1",
    "semantic-release": "^25.0.1",
    "tailwindcss": "^4.1.16",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.2",
    "vite": "^7.1.12",
    "vitest": "^4.0.6",
    "vue-tsc": "^3.1.2"
  },
  "dependencies": {
    "@inertiajs/vue3": "^2.2.15",
    "@vueuse/core": "^14.0.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "laravel-vite-plugin": "^2.0.1",
    "lucide-vue-next": "^0.555.0",
    "reka-ui": "^2.6.0",
    "tailwind-merge": "^3.3.1",
    "tw-animate-css": "^1.4.0",
    "unplugin-auto-import": "^20.2.0",
    "vue": "^3.5.22"
  },
  "optionalDependencies": {
    "@rollup/rollup-linux-x64-gnu": "4.52.5",
    "@rollup/rollup-win32-x64-msvc": "4.52.5",
    "@tailwindcss/oxide-linux-x64-gnu": "^4.1.16",
    "@tailwindcss/oxide-win32-x64-msvc": "^4.1.16",
    "lightningcss-linux-x64-gnu": "^1.30.2",
    "lightningcss-win32-x64-msvc": "^1.30.2"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "header-max-length": [
        2,
        "always",
        120
      ],
      "type-enum": [
        2,
        "always",
        [
          "breaking",
          "feat",
          "fix",
          "refactor",
          "docs",
          "wip",
          "chore",
          "style",
          "test"
        ]
      ]
    }
  }
}

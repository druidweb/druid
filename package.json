{
  "private": true,
  "type": "module",
  "scripts": {
    "build": "bun wl && vite build",
    "build:ssr": "bun wl && vite build && vite build --ssr",
    "dev": "bun wl && vite",
    "format": "prettier --write resources/",
    "format:check": "prettier --check resources/",
    "lint": "eslint . --fix",
    "lint:check": "eslint",
    "prod": "bun run build",
    "test": "vitest run",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest",
    "fix": "./vendor/bin/fixr --dirty",
    "wl": "php artisan wayfinder:generate && php artisan zorah:generate",
    "cb": "composer update && bun update && sync-deps"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.3.1",
    "@commitlint/config-conventional": "^20.3.1",
    "@eslint/js": "^9.39.2",
    "@laravel/vite-plugin-wayfinder": "^0.1.7",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^12.0.2",
    "@tailwindcss/vite": "^4.1.18",
    "@types/node": "^25.0.9",
    "@vitejs/plugin-vue": "^6.0.3",
    "@vitest/coverage-v8": "^4.0.17",
    "@vitest/ui": "^4.0.17",
    "@vue/eslint-config-typescript": "^14.6.0",
    "@vue/test-utils": "^2.4.6",
    "concurrently": "^9.2.1",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-vue": "^10.7.0",
    "husky": "^9.1.7",
    "jsdom": "^27.4.0",
    "prettier": "^3.8.0",
    "prettier-plugin-organize-imports": "^4.3.0",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "semantic-release": "^25.0.2",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.53.1",
    "vite": "^7.3.1",
    "vitest": "^4.0.17",
    "vue-tsc": "^3.2.2"
  },
  "dependencies": {
    "@inertiajs/vue3": "^2.3.11",
    "@vueuse/core": "^14.1.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "laravel-vite-plugin": "^2.1.0",
    "lucide-vue-next": "^0.562.0",
    "reka-ui": "^2.7.0",
    "tailwind-merge": "^3.4.0",
    "tw-animate-css": "^1.4.0",
    "unplugin-auto-import": "^21.0.0",
    "vue": "^3.5.27"
  },
  "optionalDependencies": {
    "@rollup/rollup-linux-x64-gnu": "4.55.2",
    "@rollup/rollup-win32-x64-msvc": "4.55.2",
    "@tailwindcss/oxide-linux-x64-gnu": "^4.1.18",
    "@tailwindcss/oxide-win32-x64-msvc": "^4.1.18",
    "lightningcss-linux-x64-gnu": "^1.31.0",
    "lightningcss-win32-x64-msvc": "^1.31.0"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "header-max-length": [
        2,
        "always",
        120
      ],
      "type-enum": [
        2,
        "always",
        [
          "breaking",
          "feat",
          "fix",
          "refactor",
          "docs",
          "wip",
          "chore",
          "style",
          "test"
        ]
      ]
    }
  }
}

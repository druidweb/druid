{
  "private": true,
  "type": "module",
  "scripts": {
    "cn": "composer update && bun update",
    "build": "bun reverb:stop && bun zz && vite build",
    "build:ssr": "bun reverb:stop && bun zz && vite build && vite build --ssr",
    "dev": "bun zz && bun reverb:start && vite",
    "format": "prettier --write resources/",
    "format:check": "prettier --check resources/",
    "lint": "eslint . --fix",
    "prod": "bun zz && vite build && vite build --ssr",
    "reverb:start": "php artisan reverb:start > storage/logs/reverb.log 2>&1 &",
    "reverb:stop": "pkill -f \"artisan reverb:start\" || echo \"No Reverb processes found\"",
    "zz": "php artisan ziggy:generate --types"
  },
  "postcss": {
    "plugins": {
      "postcss-import": {},
      "tailwindcss/nesting": {},
      "tailwindcss": {
        "config": "./tailwind.config.ts"
      },
      "autoprefixer": {}
    }
  },
  "dependencies": {
    "@headlessui/vue": "^1.7.23",
    "@inertiajs/vue3": "^2.0.6",
    "@tailwindcss/forms": "^0.5.10",
    "@types/node": "^22.14.0",
    "@types/ziggy-js": "^1.8.0",
    "@vitejs/plugin-vue": "^5.2.3",
    "@vueuse/core": "^13.0.0",
    "autoprefixer": "^10.4.21",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "concurrently": "^9.1.2",
    "laravel-echo": "^2.0.2",
    "laravel-vite-plugin": "^1.2.0",
    "lucide": "^0.482.0",
    "lucide-vue-next": "^0.482.0",
    "postcss-import": "^16.1.0",
    "pusher-js": "^8.4.0",
    "radix-vue": "^1.9.17",
    "tailwind-merge": "^3.1.0",
    "tailwindcss": "^3.4.17",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "^5.8.2",
    "vite": "^6.2.4",
    "vue": "^3.5.13",
    "vue-tsc": "^2.2.8",
    "ziggy-js": "^2.5.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.0",
    "@commitlint/config-conventional": "^19.8.0",
    "@eslint/js": "^9.23.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^11.0.1",
    "@vue/eslint-config-typescript": "^14.5.0",
    "@vue/runtime-core": "^3.5.13",
    "eslint": "^9.23.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-vue": "^10.0.0",
    "husky": "^9.1.7",
    "prettier": "^3.5.3",
    "prettier-plugin-organize-imports": "^4.1.0",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "semantic-release": "^24.2.3",
    "typescript-eslint": "^8.29.0",
    "unplugin-auto-import": "^19.1.2",
    "unplugin-vue-components": "^28.4.1"
  },
  "optionalDependencies": {
    "@rollup/rollup-linux-x64-gnu": "4.36.0",
    "@tailwindcss/oxide-linux-x64-gnu": "^4.1.1",
    "lightningcss-linux-x64-gnu": "^1.29.3"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "header-max-length": [
        2,
        "always",
        120
      ],
      "type-enum": [
        2,
        "always",
        [
          "breaking",
          "feat",
          "fix",
          "refactor",
          "docs",
          "wip",
          "chore",
          "style",
          "test"
        ]
      ]
    }
  }
}

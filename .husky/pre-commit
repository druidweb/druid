#!/bin/sh

# Get list of staged files
STAGED_FILES=$(git diff --cached --name-only --diff-filter=ACM)

# Run the fix command
bun run fix

# Run all tests to ensure they pass before commit
echo "Running tests..."
composer test

# Check if tests passed
if [ $? -ne 0 ]; then
  echo ""
  echo "‚ùå Tests failed! Commit aborted."
  echo "Please fix failing tests before committing."
  exit 1
fi

# Re-stage the files that were originally staged and may have been modified
if [ -n "$STAGED_FILES" ]; then
  echo "$STAGED_FILES" | xargs git add
fi

# Also stage any auto-generated files that might have been modified
MODIFIED_FILES=$(git diff --name-only)
if [ -n "$MODIFIED_FILES" ]; then
  echo "$MODIFIED_FILES" | grep -E "(auto-imports\.d\.ts|clover\.xml)$" | xargs -r git add
fi
